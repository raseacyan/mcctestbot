<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Merchants</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
 </head>

  <body>
  <h1>Add Stock</h1>
  

  <form id="form" action="../../addstock" method="post">
    <label for="name">Merchant Name</label><br>
    <input type="text" name="merchant_name" value="<%= data.merchant_name %>" disabled/><br>

    <label for="name">Batch No</label><br>
    <input type="text" name="item_batch"/><br>

    <label for="name">Type</label><br>
    <input type="text" name="item_type"/><br>

    <label for="name">Quantity</label><br>
    <input type="number" name="item_qty"/><br>

    <label for="name">Price</label><br>
    <input type="text" name="item_price"/><br>    

    <label for="name">Received Date</label><br>
    <input type="date" name="item_received_date"/><br>

    <label for="name">Sold</label><br>
    <input type="date" name="item_sold"/><br>

    <label for="name">In Stock</label><br>
    <input type="number" name="item_instock" value="1" disabled/><br>

    <label for="name">To Pay</label><br>
    <input type="number" name="to_pay" value="1" disabled/><br>

    <input type="hidden" name="merchant_id" value="<%= data.merchant_id %>"/><br>
    
    <input type="submit" name="submit"/>

  </form>

 
  
  
  </body>

</html>