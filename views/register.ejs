<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
 </head>

  <body>
  
  
	<form id="form" action="https://mccvbbot.herokuapp.com/register" method="post">
    <label for="name">Full Name</label><br>
    <input type="text" name="name" value="<%= data.user_name  %>"/><br>

    <label for="name">Mobile Number</label><br>
    <input type="tel" name="phone" pattern="[0-9]{5,15}"><br>

    <label for="name">Address</label><br>
    <textarea name="address" rows="4" cols="50"></textarea><br>
    
    <input type="submit" name="submit"/>

  </form>


  <script>
    
  const windowClose = () => {
    setTimeout(()=>{
      window.close();
    },2000);    
  }

      
  document.getElementById("form").addEventListener("submit", windowClose); 
	
 
  </script>
  </body>

</html>